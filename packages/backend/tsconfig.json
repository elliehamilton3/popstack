{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "./tests/**/*",
    "config/**/*",
    "dockest.service.ts",
    "dockest.unit.ts",
    "scripts/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "seeders/*",
  ]
}