{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "./tests/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}