{
  "name": "@elliehamilton3/popstack-backend",
  "version": "1.0.0",
  "description": "Back-end for popstack",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --outDir ./dist/",
    "pre:start": "npm run build",
    "start": "node dist/src/index.js",
    "start:dev": "nodemon --watch '**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/index.ts",
    "test": "npm run test:unit && npm run test:service",
    "test:service": "jest --config jest.config.service.json",
    "test:unit": "jest --config jest.config.unit.json",
    "lint": "eslint --ext .tsx,.ts ./src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliehamilton3/popstack.git"
  },
  "author": "JRNY Limited",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/elliehamilton3/popstack/issues"
  },
  "homepage": "https://github.com/elliehamilton3/popstack#readme",
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.3",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@hapi/hapi": "^19.2.0",
    "@hapi/joi": "^17.1.1"
  },
  "engines": {
    "node": "13.x"
  }
}
