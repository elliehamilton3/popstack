{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "jsx": "react",
    "types": [
      "reflect-metadata",
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "preserve",
  },
  "include": [
    "src/**/*",
    "node_modules/@types",
    "*.d.ts",
    "webpack.config.js",
    "./tests/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}