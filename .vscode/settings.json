{
    "search.exclude": {
      "**/packages/**/dist": true
    },
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "eslint.packageManager": "npm",
    "eslint.workingDirectories": [
      {
        "pattern": "packages/*",
        "changeProcessCWD": true
      },
    ],
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ]
  }